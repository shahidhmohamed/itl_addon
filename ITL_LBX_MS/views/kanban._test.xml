<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id = "test_form" model = "ir.ui.view">
        <field name = "name">Test</field>
        <field name = "model">test</field>
        <field name = "arch" type = "xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="test" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name = "Name" style="font-size: 20px;"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- End of form View -->
    <record id="action_test" model="ir.actions.act_window">
        <field name="name">test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">test</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


    
</odoo>